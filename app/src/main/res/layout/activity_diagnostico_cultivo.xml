            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/activity_ruta_inspeccion_title_sRiego"
            android:textSize="20dp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/rutainspeccion_chbCanal"
                style="@style/EditTextRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="@string/activity_ruta_inspeccion_canal" />

            <CheckBox
                android:id="@+id/rutainspeccion_chbGravedad"
                style="@style/EditTextRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="@string/activity_ruta_inspeccion_gravedad" />

            <CheckBox
                android:id="@+id/rutainspeccion_chbAspersion"
                style="@style/EditTextRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="@string/activity_ruta_inspeccion_aspersion" />

            <CheckBox
                android:id="@+id/rutainspeccion_chbGoteo"
                style="@style/EditTextRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="@string/activity_ruta_inspeccion_goteo" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/rutainspeccion_chbPozo"
                    style="@style/EditTextRespuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/activity_ruta_inspeccion_pozo" />

                <EditText
                    android:id="@+id/rutainspeccion_txtCapacidad"
                    style="@style/EditTextRespuesta"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/activity_ruta_inspeccion_capacidad"
                    android:inputType="number"
                    android:typeface="sans" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/rutainspeccion_chbRiegoOtro"
                    style="@style/EditTextRespuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/activity_ruta_inspeccion_riego_otro" />

                <EditText
                    android:id="@+id/rutainspeccion_txtRiegoOtro"
                    style="@style/EditTextRespuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="text"
                    android:typeface="sans" />

            </LinearLayout>
        </LinearLayout>

        <TextView
