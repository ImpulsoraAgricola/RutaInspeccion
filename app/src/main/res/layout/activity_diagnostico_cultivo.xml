                style="@style/EditTextRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/activity_rutainspeccion_rSi" />

            <RadioButton
                android:id="@+id/rutainspeccion_rSurcoNo"
                style="@style/EditTextRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/activity_rutainspeccion_rNo" />
        </RadioGroup>

        <TextView
