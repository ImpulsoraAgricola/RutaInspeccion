            android:orientation="vertical">

            <TextView
                style="@style/EditTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_ruta_inspeccion_poblacion"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rutainspeccion_rdPoblacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rutainspeccion_rPoblacionSi"
                style="@style/EditTextRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/activity_rutainspeccion_rSi" />

            <RadioButton
                android:id="@+id/rutainspeccion_rPoblacionNo"
                style="@style/EditTextRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/activity_rutainspeccion_rNo" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EditTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_ruta_inspeccion_maleza"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/rutainspeccion_sMaleza"
                style="@style/Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EditTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_ruta_inspeccion_estado"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/rutainspeccion_sEstadoMaleza"
                style="@style/Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EditTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_ruta_inspeccion_insecto"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/rutainspeccion_sPlaga"
                style="@style/Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EditTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_ruta_inspeccion_estado"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/rutainspeccion_sEstadoPlaga"
                style="@style/Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EditTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_ruta_inspeccion_enfermedad"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/rutainspeccion_sEnfermedad"
                style="@style/Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EditTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_ruta_inspeccion_estado"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/rutainspeccion_sEstadoEnfermedad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:typeface="sans" />

        </LinearLayout>

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/activity_ruta_inspeccion_potencial"
            android:textSize="20dp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/rutainspeccion_sPotencial"
                style="@style/Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EditTextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_ruta_inspeccion_comentario"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/rutainspeccion_txtComentario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="10"
                android:minLines="4"
                android:scrollbars="vertical" />
        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/rutainspeccion_btnGuardar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/save"
                android:text="@string/activity_ruta_inspeccion_btnGuardar"
                android:typeface="sans" />

            <ImageButton
                android:id="@+id/rutainspeccion_btnFotografia"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/camera"
                android:text="@string/activity_ruta_inspeccion_btnFotografia"
                android:typeface="sans"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/rutainspeccion_btnEnviar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/send"
                android:text="@string/activity_ruta_inspeccion_btnEnviar"
                android:typeface="sans"
                android:visibility="invisible" />
        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"></ImageView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
